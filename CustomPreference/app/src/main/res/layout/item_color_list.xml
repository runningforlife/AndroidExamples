<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:clickable="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin">

    <RadioButton android:id="@+id/rb_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:layout_marginRight="@dimen/activity_vertical_margin"/>

    <ImageView android:id="@+id/iv_color"
        android:layout_width="@dimen/color_board_size"
        android:layout_height="@dimen/color_board_size"
        android:contentDescription="@string/image_color" />

</LinearLayout>