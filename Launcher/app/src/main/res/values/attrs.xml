<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PieChart">
        <attr name="isShowText" format="boolean"/>
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        
        <attr name="textColor" format="color"/>
        <attr name="textHeight" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PathView">
        <attr name="pathColor" format="color"/>
        <attr name="pathWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PieView">
        <attr name="pieFillColor" format="color"/>
        <attr name="pieTextColor" format="color"/>
        <attr name="pieTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorListPreference">
        <attr name="viewType" format="string"/>
    </declare-styleable>

    <declare-styleable name="CanvasView">
        <attr name="circleDimen" format="dimension"/>
    </declare-styleable>
</resources>
