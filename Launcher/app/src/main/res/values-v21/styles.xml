<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="OverlayThemeRed">
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorRedDark</item>
    </style>

    <style name="OverlayThemePink">
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorPinkDark</item>
    </style>

    <style name="OverlayThemePurple">
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
    </style>

    <style name="OverlayThemeDeepPurple">
        <item name="colorPrimary">@color/colorDeepPurple</item>
        <item name="colorPrimaryDark">@color/colorDeepPurpleDark</item>
    </style>

    <style name="OverlayThemeIndigo">
        <item name="colorPrimary">@color/colorIndigo</item>
        <item name="colorPrimaryDark">@color/colorIndigoDark</item>
    </style>

    <style name="OverlayThemeBlue">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
    </style>

</resources>
